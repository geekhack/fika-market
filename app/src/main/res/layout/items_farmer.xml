<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#ffffff"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/tvQuantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="120kg"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvLocationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvQuantityText"
                    android:textSize="14sp"
                    android:text="Location:"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvQuantity"
                    android:textSize="14sp"
                    android:text="Nairobi"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvPreferredPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLocationText"
                    android:layout_marginRight="24dp"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:text="Price (preferred):"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvPreferredPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvLocation"
                    android:textSize="14sp"
                    android:text="Kshs. 8000"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"/>


                <Button
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPreferredPrice"
                    android:text="call"
                    android:background="@drawable/cv_background"/>

                <Button
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPreferredPrice"
                    android:layout_alignParentRight="true"
                    android:text="Sell"
                    android:background="@drawable/btn_roun"/>
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


