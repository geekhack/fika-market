<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wit.android.fikamarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="Fika Market">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vendors.VendorsActivity"
            android:label="@string/title_activity_farmers"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".vendors.OrdersMadeActivity"
            android:label="Make Order" />
        <activity
            android:name=".vendors.AvailableStockActivity"
            android:label="Available Stock" />
        <activity
            android:name=".farmers.FarmerActivity"
            android:label="Available Orders"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".vendors.VendorOrderAvtivity"
            android:label="Place Order">

        </activity>
    </application>

</manifest>